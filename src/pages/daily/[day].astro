---
import {
  newsData,
  type ProcessedDailyNewsItem,
  categoryAvatars,
  defaultAvatar,
} from "../../data/daily/index";
import { Image } from "astro:assets";
import { marked } from "marked";

// Configure marked for inline parsing (no <p> wrapper)
marked.use({
  renderer: {
    paragraph(token) {
      // Return the raw tokens text to avoid wrapping in <p>
      return this.parser.parseInline(token.tokens || []);
    },
  },
});

const parseMarkdown = (text: string): string => {
  if (!text) return "";
  const result = marked.parse(text, { async: false }) as string;
  return result;
};

interface PathItem {
  params: { day: string };
  props: {
    dayData: ProcessedDailyNewsItem;
    dayKey: string;
  };
}

export function getStaticPaths() {
  const paths: PathItem[] = [];

  newsData.forEach((item) => {
    paths.push({
      params: { day: item.date },
      props: {
        dayData: item,
        dayKey: item.date,
      },
    });
  });

  return paths;
}

const { dayData, dayKey } = Astro.props;
const [year, month, day] = dayKey.split("-");

const getAvatarForType = (type: string) => {
  return categoryAvatars[type] || defaultAvatar;
};

const typeLabels: Record<"zh" | "en", Record<string, string>> = {
