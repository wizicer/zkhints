  },
};

const getText = (content: any, lang: "en" | "zh"): string => {
  if (!content) return "";
  if (typeof content === "string") {
    return lang === "zh" ? content : "";
  }
  if (typeof content === "object") {
    return content[lang] || "";
  }
  return "";
};

const getWeekdayColor = (weekdayNum: number): string => {
  const colors = [
    "#e91e63", // Sunday - Pink
    "#e74c3c", // Monday - Red
    "#f39c12", // Tuesday - Orange
    "#f1c40f", // Wednesday - Yellow
    "#2ecc71", // Thursday - Green
    "#3498db", // Friday - Blue
    "#9b59b6", // Saturday - Purple
  ];
  return colors[weekdayNum];
};

const weekdayColor = getWeekdayColor(dayData.weekdayNumber);

// Split projects into groups of 2
const projectGroups: (typeof dayData.projects)[] = [];
for (let i = 0; i < dayData.projects.length; i += 2) {
  projectGroups.push(dayData.projects.slice(i, i + 2));
}
