<script>
  import { generateTextContent } from "./textGenerator";
  import QRCode from "qrcode";

  // Generate QR codes for all project URLs
  const generateQRCodes = async () => {
    const qrElements = document.querySelectorAll(".project-qr[data-url]");
    for (const el of qrElements) {
      const url = el.getAttribute("data-url");
      if (url) {
        try {
          const canvas = document.createElement("canvas");
          await QRCode.toCanvas(canvas, url, {
            width: 64,
            margin: 0,
            errorCorrectionLevel: "L",
          });
          el.appendChild(canvas);
        } catch (err) {
          console.error("QR code generation failed:", err);
        }
      }
    }
  };

  // Convert Twitter handles to links
  const convertTwitterHandles = () => {
    document.querySelectorAll(".twitter-content").forEach((el) => {
      const element = el as HTMLElement;
      element.innerHTML = element.innerHTML.replace(
        /@([A-Za-z0-9_]+)/g,
        '<a href="https://x.com/$1" target="_blank" rel="noopener noreferrer" style="color: var(--link-color);">@$1</a>'
      );
    });
  };

  // Language toggle functionality
  const initLanguageToggle = () => {
    const urlParams = new URLSearchParams(window.location.search);
    let currentLang = urlParams.get("lang") || "zh";
    const langBtn = document.getElementById("lang-btn");
    const container = document.getElementById("news-container");

    const setLanguage = (lang: string) => {
      currentLang = lang;

      // Update URL
      const url = new URL(window.location.href);
      url.searchParams.set("lang", lang);
      window.history.replaceState({}, "", url);

      // Update container class for styling
      if (container) {
        container.classList.toggle("en", lang === "en");
        container.classList.toggle("zh", lang === "zh");
      }

      // Toggle visibility
      document.querySelectorAll("[data-lang-en]").forEach((el) => {
        (el as HTMLElement).classList.toggle("hidden", lang !== "en");
      });
      document.querySelectorAll("[data-lang-zh]").forEach((el) => {
        (el as HTMLElement).classList.toggle("hidden", lang !== "zh");
      });

      // Update button text
      if (langBtn) {
        langBtn.textContent = lang === "zh" ? "English" : "‰∏≠Êñá";
      }
    };

    // Set initial language
    setLanguage(currentLang);

    // Add click handler
    if (langBtn) {
      langBtn.addEventListener("click", () => {
        setLanguage(currentLang === "zh" ? "en" : "zh");
      });
    }
  };

  // Copy functionality using generateTextContent
  const initCopyButton = () => {
    const copyBtn = document.getElementById("copy-btn");
    if (copyBtn) {
      copyBtn.addEventListener("click", async () => {
        const urlParams = new URLSearchParams(window.location.search);
        const lang = urlParams.get("lang") || "zh";

        // Use the embedded day data and generate text
        const dayData = (window as any).__DAY_DATA__;
        const text = generateTextContent([dayData], lang, true, true);

        try {
          await navigator.clipboard.writeText(text);
        } catch (err) {
          console.error("Copy failed:", err);
        }
      });
    }
  };

  // Initialize on page load
  const init = () => {
    convertTwitterHandles();
    initLanguageToggle();
    initCopyButton();
    generateQRCodes();
  };

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", init);
  } else {
    init();
  }
</script>
