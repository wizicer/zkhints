---
import Layout from "../layouts/Layout.astro";
import CheatsheetHeader from "../components/CheatsheetHeader";
import TableSection from "../components/TableSection.astro";
import "highlight.js/styles/atom-one-dark.css";
import { primitiveData, legendItems } from "../data/primitive";
---

<Layout title="ZK-SNARK Primitives Cheatsheet">
  <CheatsheetHeader
    title="ZK-SNARK Primitives Cheatsheet"
    description="Developer Edition of Zero Knowledge Primitives"
    category="ZK Technology"
    client:load
  />

  <div class="container mx-auto px-4 py-8">
    <div class="mb-8">
      <div class="flex items-center gap-2 mb-4">
        <span class="text-sm">🟢 推荐使用</span>
        <span class="text-sm">🟡 可用但谨慎</span>
        <span class="text-sm">🔴 不推荐</span>
      </div>
    </div>

    {
      primitiveData.map((section) => (
        <TableSection
          title={section.title}
          emoji={section.emoji}
          columns={section.columns}
          data={section.data}
          footnote={section.footnote}
        />
      ))
    }

    <!-- Legend Section -->
    <div class="mb-10">
      <h2 class="text-xl font-bold mb-4">📎 Legend</h2>
      <ul class="list-disc pl-5 text-sm text-gray-700">
        {
          legendItems.map((item) => (
            <li class="mb-1">
              <strong>{item.term}</strong>：{item.description}
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</Layout>
