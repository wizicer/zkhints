---
import Layout from "../layouts/Layout.astro";
import SearchBar from "../components/SearchBar";
import CategoryGrid from "../components/CategoryGrid";
import ItemSection from "../components/ItemSection";

// Sample data for categories
const categories = [
  { id: "bash", name: "Bash scripting", color: "#8860D0" },
  { id: "enzyme", name: "Enzyme", color: "#5C7080" },
  { id: "es6", name: "ES2015+", color: "#1ABC9C" },
  { id: "go", name: "Go", color: "#8860D0" },
  { id: "react", name: "React.js", color: "#5C7080" },
  { id: "sass", name: "Sass", color: "#1ABC9C" },
  { id: "vim", name: "Vim", color: "#8860D0" },
  { id: "xpath", name: "Xpath", color: "#5C7080" },
  { id: "vue", name: "Vue.js", color: "#42b883" },
  { id: "typescript", name: "TypeScript", color: "#3178c6" },
  { id: "javascript", name: "JavaScript", color: "#f7df1e" },
  { id: "css", name: "CSS", color: "#264de4" },
];

// All sections with items
const sections = [
  {
    title: "Recently updated",
    items: [
      { id: "jsdoc", title: "Jsdoc" },
      { id: "packs", title: "Packs (ruby)" },
      { id: "polyfill.io", title: "Polyfill.io" },
      { id: "tmux", title: "tmux" },
      { id: "docker-compose", title: "docker-compose" },
      { id: "cron", title: "Cron" },
      { id: "yum", title: "YUM" },
      { id: "screen", title: "Screen" },
      { id: "clip", title: "Command Line Interface Pages" },
      { id: "tig", title: "Tig" },
      { id: "tar", title: "tar" },
      { id: "atom", title: "Atom" },
      { id: "grep", title: "GNU grep" },
      { id: "stimulus-reflex", title: "StimulusReflex" },
      { id: "bash", title: "Bash scripting" },
      { id: "httpie", title: "httpie" },
      { id: "factory_bot", title: "Factory Bot" },
      { id: "flow", title: "Flow" },
    ]
  },
  {
    title: "Analytics",
    items: [
      { id: "analytics.js", title: "Google Analytics's analytics.js" },
      { id: "analytics", title: "Analytics libraries" },
      { id: "mixpanel", title: "Mixpanel" },
      { id: "google-analytics", title: "Google Analytics" },
      { id: "segment", title: "Segment" },
      { id: "matomo", title: "Matomo" },
    ]
  },
  {
    title: "Development Tools",
    items: [
      { id: "git", title: "Git" },
      { id: "npm", title: "npm" },
      { id: "yarn", title: "Yarn" },
      { id: "docker", title: "Docker CLI" },
      { id: "webpack", title: "Webpack" },
      { id: "vite", title: "Vite" },
    ]
  }
];
---

<Layout>
  <main class="p-6 md:px-8 mx-auto">
    <div class="my-12 text-center">
      <h1 class="font-extrabold tracking-tight text-5xl text-zinc-950">
        ZK Hints
      </h1>
      <p class="text-xl mt-4">
        Hey! I'm <a
          href="https://twitter.com/icerdesign"
          class="text-blue-600 hover:underline">@icerdesign</a
        > and this is a modest collection of cheatsheets I've written.
      </p>
    </div>

    <div role="banner">
      <SearchBar client:load />
      <div class="mt-8"></div>
    </div>

    <div class="pages-list" role="main">
      <CategoryGrid categories={categories} client:load />

      {sections.map(section => (
        <ItemSection title={section.title} items={section.items} client:load />
      ))}
    </div>
  </main>
</Layout>
