---
import Layout from "../layouts/Layout.astro";
import { sections, applications } from "../data/application";
import { Image } from "astro:assets";
import privacyIcon from "/src/assets/hinta/privacy.png";
import scalingIcon from "/src/assets/hinta/scaling.png";
---

<Layout title="Application in ZKP">
  <!-- Hero Section -->
  <div
    class="relative overflow-hidden bg-gradient-to-br from-blue-50 to-purple-50 rounded-xl p-10 mb-14"
  >
    <div class="absolute top-0 left-0 w-full h-full">
      <div
        class="absolute top-10 left-10 w-24 h-24 bg-blue-200 rounded-full opacity-20 animate-pulse"
      >
      </div>
      <div
        class="absolute bottom-10 right-10 w-32 h-32 bg-purple-200 rounded-full opacity-20 animate-pulse"
        style="animation-delay: 1s;"
      >
      </div>
      <div
        class="absolute top-1/2 right-1/4 w-16 h-16 bg-indigo-200 rounded-full opacity-20 animate-pulse"
        style="animation-delay: 2s;"
      >
      </div>
    </div>
    <div class="relative z-10 text-center">
      <h1
        class="text-5xl font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-purple-600"
      >
        Applications in ZKP
      </h1>
      <p class="text-xl text-gray-700 max-w-2xl mx-auto mb-10">
        Explore the two major types of Zero-Knowledge Proof applications:
      </p>
      <div class="flex flex-col md:flex-row justify-center gap-10 mt-8">
        <!-- Privacy Applications -->
        <a
          href="#privacy"
          class="group flex flex-col items-center w-56 p-6 bg-white bg-opacity-80 rounded-xl shadow-lg hover:scale-105 transition-transform duration-300"
        >
          <div class="w-20 h-20 mb-4 animate-float">
            <Image src={privacyIcon} alt="Privacy" class="w-full h-full object-contain" />
          </div>
          <span class="text-xl font-bold text-blue-700 mb-1">Privacy</span>
          <span class="text-gray-600 text-sm"
            >Confidential transactions, identity, selective disclosure, and more</span
          >
          <span
            class="mt-4 inline-block px-4 py-2 bg-blue-100 text-blue-700 rounded-full font-medium group-hover:bg-blue-200 transition"
            >Jump to Privacy</span
          >
        </a>
        <!-- Scalability Applications -->
        <a
          href="#scalability"
          class="group flex flex-col items-center w-56 p-6 bg-white bg-opacity-80 rounded-xl shadow-lg hover:scale-105 transition-transform duration-300"
        >
          <div class="w-20 h-20 mb-4 animate-float" style="animation-delay: 1.2s;">
            <Image src={scalingIcon} alt="Scalability" class="w-full h-full object-contain" />
          </div>
          <span class="text-xl font-bold text-purple-700 mb-1">Scalability</span>
          <span class="text-gray-600 text-sm"
            >Rollups, succinct proofs, off-chain computation, and more</span
          >
          <span
            class="mt-4 inline-block px-4 py-2 bg-purple-100 text-purple-700 rounded-full font-medium group-hover:bg-purple-200 transition"
            >Jump to Scalability</span
          >
        </a>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 py-8 max-w-6xl">
    {
      sections.map((section) => (
        <div class="mb-16" id={section.id}>
          <div class="flex items-start mb-6 border-b-2 border-purple-500 pb-1">
            <div class="w-24 h-24 mr-3 flex-shrink-0 bg-gradient-to-br from-blue-500 to-purple-600 p-2 rounded-md">
              <Image src={section.image} alt={section.title} class="w-full h-full object-contain" />
            </div>
            <div class="flex flex-col justify-between">
              <h2 class="text-3xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                {section.title}
              </h2>
              <p class="text-gray-600 mt-1">{section.description}</p>
            </div>
          </div>

          {section.applications.map((appType) => (
            <div class="mb-12">
              <h3 class="text-xl font-bold text-gray-800 mb-4">{appType.type}</h3>
              <p class="text-gray-600 text-sm mb-6">{appType.notes}</p>

              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {appType.examples.map((example) => {
                  const appDetail = applications.find((a) => a.id === example);
                  return appDetail ? (
                    <div class="bg-gray-50 rounded-lg shadow-sm hover:shadow-md transition-all duration-300 overflow-hidden border border-gray-100 p-6 flex flex-col h-full">
                      <div class="mb-3">
                        <div class="flex items-center">
                          <div class="w-1.5 h-8 bg-gradient-to-b from-blue-400 to-indigo-600 rounded-full mr-3" />
                          <h4 class="font-bold text-lg text-gray-800">{appDetail.application}</h4>
                        </div>
                        <p class="text-gray-600 text-sm mt-3">{appDetail.description}</p>
                      </div>

                      <div class="mt-auto pt-4">
                        <div class="grid grid-cols-1 gap-2 text-sm">
                          <div>
                            <span class="font-semibold text-gray-700">Constructs:</span>
                            <span class="text-gray-600">{appDetail.constructs}</span>
                          </div>
                          <div>
                            <span class="font-semibold text-gray-700">Primitives:</span>
                            <span class="text-gray-600">{appDetail.primitives}</span>
                          </div>
                        </div>

                        <a
                          href="#"
                          class="inline-block mt-4 text-blue-600 hover:text-blue-800 text-sm font-medium"
                        >
                          Read more
                        </a>
                      </div>
                    </div>
                  ) : (
                    <div class="bg-gray-50 rounded-lg shadow-sm hover:shadow-md transition-all duration-300 overflow-hidden border border-gray-100 p-6 flex flex-col h-full">
                      <div class="flex items-center">
                        <div class="w-1.5 h-8 bg-gradient-to-b from-gray-300 to-gray-400 rounded-full mr-3" />
                        <h4 class="font-bold text-lg text-gray-800">{example}</h4>
                      </div>
                      <p class="text-gray-500 text-sm mt-3 italic">
                        No detailed information available
                      </p>
                    </div>
                  );
                })}
              </div>
            </div>
          ))}
        </div>
      ))
    }
  </div>
</Layout>

<style>
  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-12px);
    }
    100% {
      transform: translateY(0px);
    }
  }
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style>
