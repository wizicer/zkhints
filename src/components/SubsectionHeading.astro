---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<h3 class="flex flex-row flex-nowrap items-center my-10">
  <span class="flex-grow block border-t border-black"></span>
  <span
    class="flex-none block mx-4 px-4 py-2.5 text-xl rounded leading-none font-medium bg-amber-900 text-white"
  >
    {title}
  </span>
  <span class="flex-grow block border-t border-black"></span>
</h3>
