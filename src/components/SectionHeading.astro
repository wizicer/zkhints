---
export interface Props {
  title: string;
  gradientPart?: string;
}

const { title, gradientPart } = Astro.props;
---

<h2
  class="text-2xl font-bold mb-4 text-gray-900 text-center leading-tight mb-2 border-t-4 border-b-4 border-purple-600 py-4"
>
  {
    gradientPart ? (
      <>
        {title.split(gradientPart)[0]}
        <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">
          {gradientPart}
        </span>
        {title.split(gradientPart)[1]}
      </>
    ) : (
      title
    )
  }
</h2>
